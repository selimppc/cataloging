<?xml version="1.0"?>
<config>
    <modules>
        <Etsb_Archive>
            <version>1.0.0</version>
        </Etsb_Archive>
    </modules>
    <global>
        <helpers>
            <archive>
                <class>Etsb_Archive_Helper</class>
            </archive>
        </helpers>
        <models>
            <archive>
                <class>Etsb_Archive_Model</class>
                <resourceModel>archive_mysql4</resourceModel>
            </archive>
            <archive_mysql4>
                <class>Etsb_Archive_Model_Mysql4</class>
                <entities>
                    <editor>
                        <table>etsbeditor</table>
                    </editor>
                </entities>
            </archive_mysql4>
        </models>

        <blocks>
            <archive>
                <class>Etsb_Archive_Block</class>
            </archive>
        </blocks>
        <resources>
            <archive_setup>
                <setup>
                    <module>Etsb_Archive</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </archive_setup>
            <archive_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </archive_write>
            <archive_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </archive_read>
        </resources>
    </global>

    <default>
        <archive>
            <general>
                <enabled>1</enabled>
                <minSlides>1</minSlides>
                <maxSlides>1</maxSlides>
                <speed>500</speed>
                <imagewidth>684</imagewidth>
            </general>
        </archive>

    </default>
    <frontend>
        <routers>
            <archive>
                <use>standard</use>
                <args>
                    <module>Etsb_Archive</module>
                    <frontName>archive</frontName>
                </args>
            </archive>
        </routers>
        <layout>
            <updates>
                <archive>
                    <file>archive.xml</file>
                </archive>
            </updates>
        </layout>
    </frontend>

    <admin>
        <routers>
            <archive>
                <use>admin</use>
                <args>
                    <module>Etsb_Archive</module>
                    <frontName>archive</frontName>
                </args>
            </archive>
        </routers>
    </admin>

    <adminhtml>
        <layout>
            <updates>
                <archive>
                    <file>archive.xml</file>
                </archive>
            </updates>
        </layout>
    </adminhtml>

</config>